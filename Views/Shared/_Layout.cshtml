<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DARE - @ViewBag.Title</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Audiowide' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/hover.css" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.thermometer.js" type="text/javascript"></script>
    <script src="~/Scripts/HashFunction.js" type="text/javascript"></script>
    <script src="~/Scripts/gauge.min.js" type="text/javascript"></script>
    <script src="~/Scripts/PubNub.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="navbar navbar-left-custom">
        <div class="">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="NavLogo" href="@Url.Action("Index", "Home", null)">
                    <!--<img class="navbar-brand-custom" src="~/Images/Logo220x89.png" alt="DARE Logo" height="75" width="185" />-->
                    D.A.R.E
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav nav-tabs nav-stacked">
                    <li>@Html.ActionLink("Dashboard", "Index", "Home", null, new { @class = "moveRightAnim" })</li>
                    <li>@Html.ActionLink("Clients", "Index", "Clients", null, new { @class = "moveRightAnim" })</li>
                    <li>@Html.ActionLink("Things", "Index", "Things", null, new { @class = "moveRightAnim" })</li>
                    <li>@Html.ActionLink("Actions", "Index", "Actions", null, new { @class = "moveRightAnim" })</li>
                    <li>@Html.ActionLink("Scheduler", "Index", "Schedules", null, new { @class = "moveRightAnim" })</li>
                    <li>@Html.ActionLink("Sensor Graphs", "Index", "SensorDatas", null, new { @class = "moveRightAnim" })</li>
                    <li>@Html.ActionLink("Recent Events", "Index", "Events", null, new { @class = "moveRightAnim" })</li>
                    <li class="userIconParent">
                        <a href="">Notes&nbsp;&nbsp;<span class="badge"></span></a>
                        <ul class="nav nav-tabs nav-stacked userIconChild">
                            <li>@Html.ActionLink("Received", "Received", "Notes", null, new { @class = "indent moveRightAnim" })</li>
                            <li>@Html.ActionLink("Sent", "Sent", "Notes", null, new { @class = "indent moveRightAnim" })</li>
                        </ul>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                $.ajax({
                    type: "POST",
                    url: "/Notes/newMessageCount",
                    contentType: "application/json; charset=utf-8",
                    dataType: 'text',
                    success: function (data) {
                        $('.badge').html(data);
                    }
                });
            })
        </script>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
